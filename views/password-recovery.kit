<!DOCTYPE html>
<html lang="en">

<!-- @import "components/head.html" -->

<body tabIndex="0">
  <!-- @import "components/header.html" -->
  <main>
    <section class="password-recovery page-padding">
      <div class="container">
        <div class="password-recovery__body">
          <h1 class="page-title password-recovery__title">Password recovery</h1>
          <p class="notification">
            If you forgot your password, please enter your registered email
            address. We will send you a link to reset your password.
          </p>
          <form class="form" id="password_form">
            <div class="input">
              <label for="recover_email" class="screen-reader">Email</label>
              <input type="email" class="_email _req" id="recover_email" name="recover_email"
                placeholder="info@gmail.com">
            </div>
            <div class="form__warning">The user with the mail
              <span class="value">nsmnv@icloud.com</span> was not found.
              Please try to enter registered mail or contact us.
            </div>
            <div class="form__buttons">
              <a href="#sign-in" class="btn btn--brown btn--mobile">Cancel</a>
              <button type="submit" class="btn btn--black btn--mobile">
                Proceed
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>
  <!-- @import "components/footer.html" -->
  <!-- @import "components/scripts.html" -->
  <script src="js/password-form.js"></script>
</body>

</html>