<!DOCTYPE html>
<html lang="en">

<!-- @import "components/head.html" -->

<body tabIndex="0">
  <!-- @import "components/header.html" -->
  <main>
    <section class="sign-up page-padding">
      <div class="container">
        <div class="sign-up__body">
          <h1 class="page-title sign-up__title">Sign up</h1>
          <div class="sign-up__form">
            <form class="profile-form" id="sign_up_form">
              <ul class="profile-form__inputs" role="none">
                <li class="profile-form__input">
                  <label for="signup_email">Email</label>
                  <div class="input">
                    <input type="email" class="_email _req" id="signup_email" name="signup_email"
                      placeholder="info@gmail.com">
                  </div>
                </li>
                <li class="profile-form__input">
                  <label for="signup_password">Password</label>
                  <div class="input">
                    <input type="password" class="_req" id="signup_password" name="signup_password"
                      placeholder="......................">
                    <button type="button" class="password-toggle" aria-label="toggle password visibility">
                      <span class="icon-password-hide" aria-hidden="true"></span>
                    </button>
                  </div>
                </li>
                <li class="profile-form__input">
                  <label for="signup_password_confirm">Confirm password</label>
                  <div class="input">
                    <input type="password" class="_password _req" id="signup_password_confirm"
                      placeholder="......................">
                    <button type="button" class="password-toggle" aria-label="toggle password visibility">
                      <span class="icon-password-hide" aria-hidden="true"></span>
                    </button>
                  </div>
                </li>
              </ul>
              <div class="profile-form__warning">Invalid Email or password.</div>
              <p class="profile-form__agreement">
                By registering, you accept the
                <a href="policy.html">site rules</a> and consent to the
                processing of personal data
              </p>
              <button type="submit" class="btn btn--black">Sign up</button>
            </form>
          </div>
          <p class="link">Already have an account? <a href="sign-in.html">Sign in</a></p>
        </div>
      </div>
    </section>
  </main>
  <!-- @import "components/footer.html" -->
  <!-- @import "components/scripts.html" -->
  <script src="js/sign-up-form.js"></script>
</body>

</html>