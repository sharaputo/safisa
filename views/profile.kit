<!DOCTYPE html>
<html lang="en">

<!-- @import "components/head.html" -->

<body tabIndex="0">
  <!-- @import "components/header.html" -->
  <main>
    <section class="profile page-padding">
      <div class="container">
        <h1 class="page-title profile__title">Profile</h1>
        <div class="profile__body">
          <nav class="profile__nav" aria-label="profile links">
            <ul class="profile__links">
              <li class="profile__link">
                <a href="#profile" aria-current="page">Profile</a>
              </li>
              <li class="profile__link">
                <a href="#orders">Orders</a>
              </li>
            </ul>
          </nav>
          <div class="profile__form">
            <form class="form" id="profile_form">
              <ul class="form__inputs" role="none">
                <li class="form__input">
                  <label for="profile_name">Full name</label>
                  <div class="input">
                    <input type="text" class="_name _req" id="profile_name" name="profile_name"
                      placeholder="Julia Rven">
                  </div>
                </li>
                <li class="form__input">
                  <label for="profile_email">Email</label>
                  <div class="input">
                    <input type="email" class="_email _req" id="profile_email" name="profile_email"
                      placeholder="info@gmail.com">
                  </div>
                </li>
                <li class="form__input">
                  <label for="profile_phone">Telephone</label>
                  <div class="input">
                    <input type="tel" class="_phone _req" id="profile_phone" name="profile_phone"
                      placeholder="+7 921 336 04 23">
                  </div>
                </li>
                <li class="form__input">
                  <label for="profile_password">Password</label>
                  <div class="input">
                    <input type="password" class=" _req" id="profile_password" name="profile_password"
                      placeholder="......................">
                    <button type="button" class="password-toggle" aria-label="toggle password visibility">
                      <span class="icon-password-hide" aria-hidden="true"></span>
                    </button>
                  </div>
                </li>
                <li class="form__input">
                  <label for="profile_password_confirm">Confirm password</label>
                  <div class="input">
                    <input type="password" class="_password _req" id="profile_password_confirm"
                      placeholder="......................">
                    <button type="button" class="password-toggle" aria-label="toggle password visibility">
                      <span class="icon-password-hide" aria-hidden="true"></span>
                    </button>
                  </div>
                </li>
              </ul>
              <div class="profile-form__warning">Please, fill in all the required fields.</div>
              <div class="form__buttons">
                <button type="submit" class="btn btn--brown" id="save_data">Save</button>
                <button type="button" class="btn btn--black" id="form_reset">Cancel</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>
  <!-- @import "components/footer.html" -->
  <!-- @import "components/scripts.html" -->
  <script src="js/profile-form.js"></script>
</body>

</html>